<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ticketing.controller.LoginController">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <HBox spacing="10">
        <Label text="Name:"/>
        <TextField fx:id="usernameField"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Password:"/>
        <PasswordField fx:id="passwordField"/>
    </HBox>

    <Button text="Login" onAction="#handleLogin" style="-fx-background-color: #3366FF; -fx-text-fill: white;"/>
</VBox>
